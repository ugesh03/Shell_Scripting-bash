#!/bin/sh

#Author: Ugesh
#Script: Jump server
#Version: 1.0

# Navigate to the directory
cd ~/.ssh/

# Create key pair .pem file
if read -t 20 -p "Enter Keypair(20 seconds): " input; then
    echo "You entered: echo $input > ~/.ssh/keypair.pem "
else
    echo "Timed out!"
fi

#Enter the keypair manually
cat > ~/.ssh/keypair1.pem

CTRL + D

# Granting access to the Keypair
chmod 400 keypair.pem
chmod 400 keypair1.pem

#Create Config.sh file and add the script

cat > Config.sh 
Host Server-1
  HostName 132.23.34.45
  User ec2-user
  IdentifyFile ~/.ssh/keypair.pem

Host Server-2
  HostName 132.23.34.45
  User ec2-user
  IdentifyFile ~/.ssh/keypair1.pem

CTRL + D

#  ssh Server-1 //you can use this command to login different server from 1server
